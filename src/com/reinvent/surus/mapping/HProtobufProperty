package com.reinvent.surus.mapping;

import java.lang.annotation.*;

/**
 * @author Bohdan Mushkevych
 * Description: Annotation describes Protobuf property that will be stored as a <column> in <column family>
 *
 * HProtobufProperty must NOT be used in conjunction with other annotations
 */

@Documented
@Retention(RetentionPolicy.RUNTIME)
@Target({ElementType.FIELD})
public @interface HProtobufProperty {
    /**
     * @return String name of the Column Family
     */
    String family();

    /**
     * @return String name of the Column (qualifier)
     */
    String identifier();

    /**
     * @return exact protobuf class type
     */
    Class elementType();

}
