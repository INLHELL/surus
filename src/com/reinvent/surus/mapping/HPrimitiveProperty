package com.reinvent.surus.mapping;

import java.lang.annotation.*;

/**
 * @author Bohdan Mushkevych
 * Description: Annotation describes simple primitive property that will be stored as a <column> in <column family>
 * Primive property includes: Integer, Double, Float, String, Byte, Byte[]
 *
 * HPrimitiveProperty must NOT be used in conjunction with other annotations
 */

@Documented
@Retention(RetentionPolicy.RUNTIME)
@Target({ElementType.FIELD})
public @interface HPrimitiveProperty {
    /**
     * @return String name of the Column Family
     */
    String family();

    /**
     * @return String name of the Column (qualifier)
     */
    String identifier();

    /**
     * @return type of the property
     */
    Class elementType();
}
